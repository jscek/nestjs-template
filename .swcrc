{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "es2021",
    "keepClassNames": true,
    "baseUrl": ".",
    "paths": {
      "@ogma/*": [
        "packages/*/src/"
      ]
    }
  },
  "module": {
    "type": "commonjs",
    "strictMode": true
  },
  "sourceMaps": true
}